<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_server_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="server start"
        />

    <Button
        android:id="@+id/btn_server_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="server stop"
        />

    <Button
        android:id="@+id/btn_client_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="client start"
        />

    <Button
        android:id="@+id/btn_client_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="client stop"
        />
</LinearLayout>
